root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
charset = utf-8

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
max_line_length = 10000

[*.py]
# https://peps.python.org/pep-0008/#indentation
indent_size = 4

[*.js]
# https://peps.python.org/pep-0008/#indentation
indent_size = 4
